<h2>Username:</h2>
<p><%= @user.username %></p>
<p><%= "Has made #{@user.ratings.count} ratings, average rating #{@user.average_rating}"%></p>

<p>Favourite beer style: <%= @user.favorite_style %></p>
<p>Favourite brewery: <%= @user.favorite_brewery %></p>

<p><strong>member of</strong></p>

<ul>
  <% @user.beer_clubs.each do |club| %>
  <li><%= link_to club.name, club %></li>
  <% end %>
</ul>

<p><strong>ratings</strong></p>

<ul>
  <% @user.ratings.each do |rating| %>
  <li>
    <%= rating.to_s %>
    <% if @user == current_user %>
      <%= link_to "Delete", rating_path(rating), data: {"turbo-method": :delete} %>
    <% end %>
  </li>
  <% end %>
</ul>

<div>
  <% if @user == current_user %>
    <%= link_to "Edit this user", edit_user_path(@user) %> |
  <% end %>
  <%= link_to "Back to users", users_path %>

  <% if @user == current_user %>
    <%= button_to "Destroy this user", @user, method: :delete %>
  <% end %>
</div>
